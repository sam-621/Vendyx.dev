    "@prisma/client": "^5.17.0",
    "bcrypt": "^5.1.1",
    "graphql": "^16.9.0",
    "graphql-type-json": "^0.3.2",
    "nestjs-cls": "^4.4.0",
    "nestjs-prisma": "^0.23.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
